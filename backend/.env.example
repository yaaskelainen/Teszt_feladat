# Backend Environment Variables
# Copy this to .env and fill in your values

# PostgreSQL Credentials (used by Docker Compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=event_manager

# Database Connection
# For Local Development (without Docker):
DATABASE_URL=postgresql://postgres:password@localhost:5432/event_manager?schema=public
# For Docker: This is automatically overridden by docker-compose.yml to use 'db' instead of 'localhost'

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google Gemini AI API Key (Required for Help Desk)
GEMINI_API_KEY=your-gemini-api-key-here

# Application Environment
NODE_ENV=development
PORT=3000

SMTP_HOST="..."
SMTP_PORT=...
SMTP_USER="..."
SMTP_PASSWORD=put_your_password_here